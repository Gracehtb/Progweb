@model SampleASPCore.Models.Mahasiswa

@{
    Layout = "_Layout";
}
<br/>
<a asp-action="Index" class="btn btn-success btn-xs">Tampilkan Data</a>
<br/>

<div class="row">
@if(ViewData["pesan"]!=null)
{
    @Html.Raw(ViewData["pesan"])
}
<br/><br/>
</div>
<h2>Form Edit Mahasiswa</h2>
<div class="col-md-6">
    <form asp-action="Edit">
        <div class ="form-group">
            <label asp-for="Nim">Nim :</label>
            <input asp-for="Nim" readonly="readonly" class="form-control"/>
        </div> 
        <div class ="form-group">
            <label asp-for="Nama">Nama :</label>
            <input asp-for="Nama" class="form-control"/>
        </div>
        <div class ="form-group">
            <label asp-for="Email">Email :</label>
            <input asp-for="Email" class="form-control"/>
        </div>
        <div class ="form-group">
            <label asp-for="Telp">Telp :</label>
            <input asp-for="Telp" class="form-control"/>
        </div>
        <div calss="form-group">
            <input type="submit" value="Update" class="btn btn-primary"/>
            </div>
    </form>
</div>