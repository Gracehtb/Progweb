        </div> 
        <div class ="form-group">
            <label asp-for="KategoriName">NAMA KATEGORI :</label>
            <input asp-for="KategoriName" class="form-control"/>
        </div>
        <div calss="form-group">
            <input type="submit" value="Submit" class="btn btn-primary"/>
            </div>
    </form>
