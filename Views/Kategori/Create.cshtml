<a asp-action="Index" class="btn btn-success btn-xs">Tampilkan Data</a>
<br/>

<div class="row">
@if(ViewData["pesan"]!=null)
{
    @Html.Raw(ViewData["pesan"])
}
<br/><br/>
</div>


<div class="col-md-6">
    <form asp-action="CreatePost">
