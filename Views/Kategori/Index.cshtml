@{
    Layout = "_Layout";
}

<h2>DAFTAR KATEGORI BERITA</h2>
<a asp-action="Create" class="btn btn-success btn-xs">Tambah Data</a>
<br/>

<table class="table table-stripped">
    <tr>
        <th>ID KATEGORI</th>
        <th>NAMA KATEGORI</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var data in Model){
        <tr>
            <td>@data.KategoriID</td>
            <td>@data.KategoriName</td>
            <td><a asp-action="Details" asp-route-id="@data.KategoriID">Edit</a></td>
            <td><a asp-action="Delete" asp-route-id="@data.KategoriID">Hapus</a></td>
        </tr>
    }
</table>