@model SampleASPCore.Models.Kategori

@{
    Layout = "_Layout";
}
<br/>
<a asp-action="Index" class="btn btn-success btn-xs">Tampilkan Data</a>
<br/>
<div class="row">
@if(ViewData["pesan"]!=null)
{
    @Html.Raw(ViewData["pesan"])
}
<br/><br/>
</div>
<h2>Form Edit Data</h2>
<div class="col-md-6">
    <form asp-action="Edit">
        <div class ="form-group">
            <label asp-for="KategoriID">ID KATEGORI :</label>
            <input asp-for="KategoriID" readonly="readonly" class="form-control"/>
        </div> 
        <div class ="form-group">
            <label asp-for="KategoriName">NAMA KATEGORI :</label>
            <input asp-for="KategoriName" class="form-control"/>
        </div>
        <div calss="form-group">
            <input type="submit" value="Update" class="btn btn-primary"/>
            </div>
    </form>
</div>